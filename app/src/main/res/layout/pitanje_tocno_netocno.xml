<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewBrojPitanja"
        android:background="@drawable/pitanje_number"
        android:layout_marginLeft="20dp"
        android:textColor="#4a90e2"
        android:gravity="center"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPitanje"
        android:textColor="#000"
        android:padding="5dp"
        android:background="@drawable/pitanje_border"
        android:layout_margin="20dp" />

    <com.loopj.android.image.SmartImageView
        android:id="@+id/my_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#aaa"
        android:padding="5dp"
        android:id="@+id/textViewPitanjeText"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="20dp"
        android:tag="Tocno"
        android:layout_margin="20dp"
        android:id="@+id/tocno_netocno"
        android:contextClickable="false"
        android:hapticFeedbackEnabled="true">

        <TextView
            android:text="Točno"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textViewTocno"
            android:tag=""
            android:layout_weight="1"
            android:background="@drawable/gray_button"
            android:textColor="#000"
            android:gravity="center" />

        <TextView
            android:text=" Netočno"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gray_button"
            android:id="@+id/textViewNetocno"
            android:textColor="#000"
            android:layout_weight="1"
            android:gravity="center" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxTocno"
            android:layout_weight="0" />
    </LinearLayout>

    <Button
        android:text="@string/nastavi"
        android:layout_width="match_parent"
        android:background="#141F4B"
        android:textColor="#fff"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="14sp"
        android:id="@+id/nastavi_pitanja" />

</LinearLayout>