<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/activity_rjesavanje_ispita_info_fragments"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context="com.matura.drzavna.matura.main_menu_activities.RjesavanjeIspitaInfoFragments">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/napomena"
            android:id="@+id/imageViewNapomena"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp" />

        <TextView
            android:text="@string/napomena_naslov"
            android:layout_width="match_parent"
            android:id="@+id/textViewNapomenaNaslov"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_below="@+id/imageViewNapomena"
            android:layout_alignParentStart="true"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:textStyle="normal|bold" />

        <TextView
            android:text="@string/napomena_tekst"
            android:layout_width="match_parent"
            android:id="@+id/textViewNapomena"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_below="@+id/textViewNapomenaNaslov"
            android:layout_alignParentStart="true"
            android:padding="20dp"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/pocni_sa_rjesavanjem"
            android:id="@+id/imageViewPocni"
            android:layout_marginBottom="22dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right" />

    </LinearLayout>


</ScrollView>

