<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.matura.drzavna.matura.Register_Activity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="textPersonName"
        android:text="@string/vec_imas_racun"
        android:ems="10"
        android:id="@+id/editTextImasRacun"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="2dp" />

    <Button
        android:text="@string/register_button"
        android:id="@+id/button_register"
        android:layout_width="match_parent"
        android:background="#141F4B"
        android:textColor="#fff"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_above="@+id/editTextImasRacun"
        android:layout_centerHorizontal="true"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/first_logo"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="109dp"
        android:layout_height="150dp" />


</RelativeLayout>
